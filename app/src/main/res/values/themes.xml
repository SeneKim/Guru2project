<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Guru2Project" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/subColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AuthEditText" parent="android:Widget.EditText">

        <item name="android:fontFamily">@font/notosanskr_medium</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="NextBtn" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:background">@drawable/btn_enabled</item>
        <item name="android:text">"다음"</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>

    <style name="functionTitle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>

    </style>


</resources>