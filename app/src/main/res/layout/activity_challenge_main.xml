<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".challengePage.ChallengeMainActivity">

  <LinearLayout
      android:id="@+id/MainlinearLayout"
      android:layout_width="match_parent"
      android:layout_height="140dp"
      android:background="@drawable/layout_challenge"
      android:orientation="vertical"
      android:padding="15dp"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="1dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:ignore="ExtraText">

        <!--상대적 위치 기준이 되는 뷰-->

        <TextView
            android:id="@+id/textView"
            style="@style/functionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="챌린지"
            android:textColor="@color/white"
            tools:ignore="RtlHardcoded" />

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/bell" />
        <!--알림 버튼
        layout_centerInParent="true" -> RelativeLayout 기준 중앙에 위치
        layout_toEndOf="@+id/textView" -> 챌린지 TextView 기준 오른쪽에 위치
        layout_layout_marginStart="300dp" -> 간격 300dp
        -->
      </RelativeLayout>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="5dp"
          android:src="@drawable/notification_on"
          android:visibility="invisible" />

    </FrameLayout>

    <!--스크롤뷰 안에는 오직 1개의 View만 추가가 가능함-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <RadioGroup
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_day_selector"
            android:button="@null"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@drawable/btn_day_selector_text"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_day_selector"
            android:button="@null"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@drawable/btn_day_selector_text"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_day_selector"
            android:button="@null"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@drawable/btn_day_selector_text"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_day_selector"
            android:button="@null"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@drawable/btn_day_selector_text"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_day_selector"
            android:button="@null"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@drawable/btn_day_selector_text"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_day_selector"
            android:button="@null"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@drawable/btn_day_selector_text"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_day_selector"
            android:button="@null"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@drawable/btn_day_selector_text"
            android:textSize="20sp" />


      </RadioGroup>

    </HorizontalScrollView>

    <!--챌린지 상단 메인 컬러 영역-->
  </LinearLayout>

  <!--챌린지 하단 챌린지 내용 영역-->
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="140dp">

    <LinearLayout
        android:id="@+id/subLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            style="@style/functionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참여 가능한 챌린지"
            android:textSize="18sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:text="전체보기"
            android:textAlignment="viewEnd"
            android:textColor="@color/gray" />

      </RelativeLayout>

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/layout_recommend_post" />

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:background="@drawable/layout_recommend_post" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20sp">

        <TextView
            style="@style/functionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="챌린지  현황"
            android:textSize="18sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:text="전체보기"
            android:textAlignment="viewEnd"
            android:textColor="@color/gray" />

      </RelativeLayout>

      <RadioGroup
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_menu"
            android:button="@null"
            android:text="내 챌린지 현황"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_menu"
            android:button="@null"
            android:text="타인 챌린지 현황"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

      </RadioGroup>

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:background="@drawable/layout_recommend_post" />

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:background="@drawable/layout_recommend_post" />

    </LinearLayout>
  </ScrollView>


  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingActionButton2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:clickable="true"
      android:contentDescription="챌린지 생성"
      android:focusable="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:src="@drawable/plus"
      android:backgroundTint="@color/mainColor"/>


</androidx.constraintlayout.widget.ConstraintLayout>